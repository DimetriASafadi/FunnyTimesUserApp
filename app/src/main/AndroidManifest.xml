<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.funnytimesuserapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".APISection.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FunnyTimesUserApp">
        <activity
            android:name=".AuthSection.PhonePasswordReset"
            android:configChanges="locale|orientation"
            android:exported="true"
            android:theme="@style/SplashTheme"  />
        <activity
            android:name=".ServicesSection.ChaletScreen"
            android:configChanges="locale|orientation"
            android:exported="true"
            android:theme="@style/SplashTheme"  />
        <activity
            android:name=".MainMenu"
            android:configChanges="locale|orientation"
            android:exported="true"
            android:theme="@style/SplashTheme"  />
        <activity
            android:name=".AuthSection.NewPasswordScreen"
            android:configChanges="locale|orientation"
            android:exported="true"
            android:theme="@style/SplashTheme"  />
        <activity
            android:name=".AuthSection.PassResetCodeConfirmScreen"
            android:configChanges="locale|orientation"
            android:exported="true"
            android:theme="@style/SplashTheme"  />
        <activity
            android:name=".AuthSection.CodeConfirmScreen"
            android:configChanges="locale|orientation"
            android:exported="true"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".AuthSection.PhoneConfirmScreen"
            android:configChanges="locale|orientation"
            android:exported="true"
            android:theme="@style/SplashTheme"  />
        <activity
            android:name=".AuthSection.SignInScreen"
            android:configChanges="locale|orientation"
            android:exported="true"
            android:theme="@style/SplashTheme"  />
        <activity
            android:name=".AuthSection.SignUpScreen"
            android:configChanges="locale|orientation"
            android:exported="true"
            android:theme="@style/SplashTheme"  />
        <activity
            android:name=".SplashSection.SplashMenu"
            android:configChanges="locale|orientation"
            android:exported="true"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>