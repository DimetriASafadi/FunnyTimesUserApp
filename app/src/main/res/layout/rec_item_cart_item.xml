<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/ft_radius_fill"
    android:layout_margin="@dimen/_5sdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/_5sdp"
        >



        <RelativeLayout
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/ProductImage"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ft_splash_logo"
                app:riv_corner_radius="@dimen/_10sdp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ProductDelete"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerInParent="true"
                android:alpha="0.5"
                android:src="@color/ft_red" />
            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:src="@drawable/ft_delete_trash_remove_icon"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.8"
            >

            <TextView
                android:id="@+id/ProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="شاليه أخضر مع ملعب طائرة"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/ft_black"
                android:fontFamily="@font/montserrat_arabic"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:maxLines="1"
                android:textDirection="rtl"
                />

            <TextView
                android:id="@+id/ProductAttributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حي الرياض,الرياض"
                android:textSize="@dimen/_9ssp"
                android:maxLines="1"
                android:textDirection="rtl"
                android:textColor="@color/ft_dark_blue"
                android:fontFamily="@font/montserrat_arabic"
                android:layout_marginVertical="@dimen/_2sdp"
                android:layout_marginHorizontal="@dimen/_4sdp"
                />
            <TextView
                android:id="@+id/ProductVendorLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حي الرياض,الرياض"
                android:textSize="@dimen/_9ssp"
                android:maxLines="1"
                android:textDirection="rtl"
                android:textColor="@color/ft_menu_unselected"
                android:fontFamily="@font/montserrat_arabic"
                android:layout_marginVertical="@dimen/_2sdp"
                android:layout_marginHorizontal="@dimen/_4sdp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginVertical="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_4sdp"
                >
                <TextView
                    android:id="@+id/ProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="800 ر.س"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/ft_menu_unselected"
                    android:fontFamily="@font/montserrat_arabic"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:maxLines="1"
                    />
                <com.willy.ratingbar.BaseRatingBar
                    android:id="@+id/ProductRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srb_starHeight="@dimen/_7sdp"
                    app:srb_starWidth="@dimen/_7sdp"
                    app:srb_starPadding="@dimen/_2sdp"
                    app:srb_rating="5"
                    app:srb_stepSize="0.5"
                    app:srb_clickable="false"
                    android:clickable="false"
                    app:srb_drawableFilled="@drawable/ft_rate_star_fill_icon"
                    app:srb_drawableEmpty="@drawable/ft_rate_star_empty_icon"
                    />
                <TextView
                    android:id="@+id/ProductRatingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(50)"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/ft_menu_unselected"
                    android:fontFamily="@font/montserrat_arabic"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:maxLines="1"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/ProductSelected"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:src="@drawable/ft_check_circle_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:id="@+id/ProductMinos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/montserrat_arabic"
                    android:paddingVertical="@dimen/_1sdp"
                    android:paddingHorizontal="@dimen/_7sdp"
                    android:background="@drawable/ft_radius_fill_light"
                    android:backgroundTint="@color/ft_grey"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/ft_dark_blue"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    />
                <TextView
                    android:id="@+id/ProductQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99"
                    android:fontFamily="@font/montserrat_arabic"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/ft_radius_fill_light"
                    android:backgroundTint="@color/ft_grey"
                    android:textColor="@color/ft_black"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    />
                <TextView
                    android:id="@+id/ProductIncrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:fontFamily="@font/montserrat_arabic"
                    android:paddingVertical="@dimen/_1sdp"
                    android:paddingHorizontal="@dimen/_7sdp"
                    android:background="@drawable/ft_radius_fill_light"
                    android:backgroundTint="@color/ft_grey"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/ft_dark_blue"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    />
            </LinearLayout>




        </RelativeLayout>

    </LinearLayout>


</LinearLayout>