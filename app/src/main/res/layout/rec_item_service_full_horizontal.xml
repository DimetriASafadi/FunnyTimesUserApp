<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/SFHImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@color/ft_orange"
        app:riv_corner_radius="@dimen/_8sdp" />

    <TextView
        android:id="@+id/SFHPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/ft_radius_fill_light"
        android:backgroundTint="@color/ft_trans_dark_blue"
        android:fontFamily="@font/montserrat_arabic"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_3sdp"
        android:text="40ر.س65069804"
        android:textColor="@color/ft_white"
        android:textSize="@dimen/_11ssp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SFHTitle"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginBottom="99dp"
        android:orientation="horizontal">

        <com.willy.ratingbar.BaseRatingBar
            android:id="@+id/SFHRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srb_clickable="false"
            android:clickable="false"
            app:srb_drawableEmpty="@drawable/ft_rate_star_empty_icon"
            app:srb_drawableFilled="@drawable/ft_rate_star_fill_icon"
            app:srb_rating="5"
            app:srb_starHeight="@dimen/_10sdp"
            app:srb_starPadding="@dimen/_3sdp"
            app:srb_starWidth="@dimen/_10sdp"
            app:srb_stepSize="0.5" />

        <TextView
            android:id="@+id/SFHRatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:fontFamily="@font/montserrat_arabic"
            android:text="(50)"
            android:textStyle="normal"
            android:textColor="@color/ft_white"
            android:textSize="@dimen/_9ssp" />
    </LinearLayout>


    <TextView
        android:id="@+id/SFHTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_toStartOf="@+id/SFHPrice"
        android:fontFamily="@font/montserrat_arabic"
        android:maxLines="2"
        android:text="شاليه أخضر مع ملعب طائرة"
        android:textColor="@color/ft_white"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/SFHIsFavourite"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_5sdp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:alpha="0.1"
            android:src="@color/ft_black" />

        <ImageView
            android:id="@+id/SFHFavoriteIcon"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/ft_favorite_heart_unlike_icon" />
    </RelativeLayout>






</RelativeLayout>