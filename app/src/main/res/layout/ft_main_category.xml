<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/_5sdp"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/BookingSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/ft_radius_stroke"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ft_cat_big_icon_properties"
                android:layout_margin="@dimen/_5sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أماكن ترفيهية"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/montserrat_arabic"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/ft_black"


                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ServiceSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/ft_radius_stroke"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ft_cat_big_icon_clinics"
                android:layout_margin="@dimen/_5sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="العيادات"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/montserrat_arabic"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/ft_black"


                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/FoodSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/ft_radius_stroke"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ft_cat_big_icon_food"
                android:layout_margin="@dimen/_5sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الوجبات"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/montserrat_arabic"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/ft_black"


                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ShopSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/ft_radius_stroke"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ft_cat_big_icon_shopping"
                android:layout_margin="@dimen/_5sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="التسوق"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/montserrat_arabic"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/ft_black"


                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>