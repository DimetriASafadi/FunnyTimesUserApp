<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:background="@drawable/ft_radius_top_fill"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        >
        <TextView
            android:id="@+id/OrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* طلب غير متوفر *"
            android:fontFamily="@font/montserrat_arabic"
            android:textColor="@color/ft_dark_blue"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تاريخ الطلب :"
                android:fontFamily="@font/montserrat_arabic"
                android:textColor="@color/ft_black"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_10ssp"
                android:alpha="0.6"
                android:layout_marginHorizontal="@dimen/_2sdp"
                />

            <TextView
                android:id="@+id/OrderCreatedAt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="غير متوفر"
                android:fontFamily="@font/montserrat_arabic"
                android:textColor="@color/ft_dark_blue"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_11ssp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ft_black"
            android:alpha="0.1"
            android:layout_marginVertical="@dimen/_10sdp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="إجمالي المبلغ المدفوع :"
                android:fontFamily="@font/montserrat_arabic"
                android:textColor="@color/ft_black"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_10ssp"
                android:alpha="0.6"
                android:layout_marginHorizontal="@dimen/_2sdp"
                />

            <TextView
                android:id="@+id/OrderTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="غير متوفر"
                android:fontFamily="@font/montserrat_arabic"
                android:textColor="@color/ft_dark_blue"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_11ssp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حالة الدفع :"
                android:fontFamily="@font/montserrat_arabic"
                android:textColor="@color/ft_black"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_10ssp"
                android:alpha="0.6"
                android:layout_marginHorizontal="@dimen/_2sdp"
                />

            <TextView
                android:id="@+id/OrderPaymentStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="غير متوفر"
                android:fontFamily="@font/montserrat_arabic"
                android:textColor="@color/ft_dark_blue"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_11ssp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="اسم البائع :"
                android:fontFamily="@font/montserrat_arabic"
                android:textColor="@color/ft_black"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_10ssp"
                android:alpha="0.6"
                android:layout_marginHorizontal="@dimen/_2sdp"
                />

            <TextView
                android:id="@+id/OrderVendorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="غير متوفر"
                android:fontFamily="@font/montserrat_arabic"
                android:textColor="@color/ft_dark_blue"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_11ssp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حالة الطلب :"
                android:fontFamily="@font/montserrat_arabic"
                android:textColor="@color/ft_black"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_10ssp"
                android:alpha="0.6"
                android:layout_marginHorizontal="@dimen/_2sdp"
                />

            <TextView
                android:id="@+id/OrderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="غير متوفر"
                android:fontFamily="@font/montserrat_arabic"
                android:textColor="@color/ft_dark_blue"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_11ssp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="طريقة الدفع :"
                android:fontFamily="@font/montserrat_arabic"
                android:textColor="@color/ft_black"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_10ssp"
                android:alpha="0.6"
                android:layout_marginHorizontal="@dimen/_2sdp"
                />

            <TextView
                android:id="@+id/OrderPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="غير متوفر"
                android:fontFamily="@font/montserrat_arabic"
                android:textColor="@color/ft_dark_blue"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_11ssp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ft_black"
            android:alpha="0.1"
            android:layout_marginVertical="@dimen/_10sdp"
            />

        <LinearLayout
            android:id="@+id/OrderItemsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="المنتجات المسجلة :"
                android:fontFamily="@font/montserrat_arabic"
                android:textColor="@color/ft_black"
                android:gravity="center_horizontal"
                android:textSize="@dimen/_10ssp"
                android:alpha="0.6"
                android:layout_marginHorizontal="@dimen/_2sdp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/OrderItemsRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:paddingBottom="@dimen/_50sdp"

                />

        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>